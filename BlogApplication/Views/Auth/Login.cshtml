@model BlogApplication.Models.Auth.LoginRequest
@{
    ViewBag.Title = "Авторизация";
}

<div class="card">
    <div class="card-header">
        Авторизация
    </div>
    <div class="card-body">
        <form asp-controller="Auth" asp-action="Login" asp-antiforgery="true">
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input type="email" class="form-control" asp-for="Email" placeholder="user@user.ru">
                <span style="color: red" asp-validation-for="Email"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Пароль</label>
                <input type="password" class="form-control" asp-for="Password" placeholder="*********">
                <span style="color: red" asp-validation-for="Password"></span>
            </div>
            
            <button type="submit" class="btn btn-primary">Войти</button>
        </form>
    </div>
</div>